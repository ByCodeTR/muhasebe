{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "name": "muhasebe-frontend",
    "framework": "nextjs",
    "buildCommand": "npm run build",
    "outputDirectory": ".next",
    "installCommand": "npm install",
    "devCommand": "npm run dev",
    "regions": [
        "fra1"
    ],
    "env": {
        "NEXT_PUBLIC_API_URL": "@muhasebe_api_url"
    },
    "build": {
        "env": {
            "NEXT_PUBLIC_API_URL": "@muhasebe_api_url"
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://muhasebe-api-0qa5.onrender.com/:path*"
        }
    ]
}